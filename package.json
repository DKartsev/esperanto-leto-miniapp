{
  "name": "esperanto-learning-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "bot": "node src/bot/index.js",
    "bot:dev": "node --watch src/bot/index.js",
    "start": "concurrently \"npm run dev\" \"npm run bot:dev\" --names \"WebApp,TelegramBot\" --prefix-colors \"cyan,yellow\"",
    "start:prod": "concurrently \"npm run preview\" \"npm run bot\" --names \"WebApp,TelegramBot\" --prefix-colors \"green,blue\"",
    "diagnostics": "node src/bot/diagnostics.js",
    "test": "node --test"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.263.1",
    "node-telegram-bot-api": "^0.66.0",
    "openai": "^4.20.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "typescript": "~5.6.2",
    "typescript-eslint": "^7.0.0",
    "vite": "^5.4.10"
  },
  "engines": {
    "node": ">=20"
  }
}
