{
  "name": "esperanto-learning-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "prebuild": "node scripts/prepareEnv.cjs",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "bot": "node src/bot/index.js",
    "bot:dev": "node --watch src/bot/index.js",
    "start": "concurrently \"npm run dev\" \"npm run bot:dev\" --names \"WebApp,TelegramBot\" --prefix-colors \"cyan,yellow\"",
    "start:prod": "concurrently \"npm run preview\" \"npm run bot\" --names \"WebApp,TelegramBot\" --prefix-colors \"green,blue\"",
    "diagnostics": "node src/bot/diagnostics.js",
    "test": "node --test",
    "test:ui": "vitest run"
  },
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@supabase/supabase-js": "^2.50.3",
    "@tanstack/react-query": "^5.83.0",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "framer-motion": "^12.23.6",
    "graphql": "^16.11.0",
    "lucide-react": "^0.263.1",
    "openai": "^4.20.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.30.1",
    "telegraf": "^4.16.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@eslint/config-array": "latest",
    "@eslint/js": "^8.57.1",
    "@eslint/object-schema": "latest",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.15",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "glob": "^9.3.5",
    "globals": "^15.11.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.32",
    "rimraf": "^4.4.1",
    "tailwindcss": "^3.3.6",
    "typescript": "~5.6.2",
    "typescript-eslint": "^7.0.0",
    "vite": "^7.0.5",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ]
  }
}
