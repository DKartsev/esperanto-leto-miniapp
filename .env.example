# Example environment configuration for Esperanto-Leto
# Copy this file to .env and replace values with real credentials

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
BOT_USERNAME=your_bot_username
WEBAPP_URL=https://tgminiapp.esperanto-leto.ru

# Optional port for the local API server
API_PORT=3001

# Supabase
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# OpenAI (optional)
VITE_OPENAI_API_KEY=your_openai_api_key
VITE_OPENAI_ORG_ID=your_openai_org_id
VITE_OPENAI_MODEL=gpt-3.5-turbo
VITE_OPENAI_MAX_TOKENS=500
VITE_OPENAI_TEMPERATURE=0.7

# Admin panel (comma separated lists allowed)
VITE_ADMIN_USERNAME=admin_user
VITE_ADMIN_EMAIL=admin@example.com

# GraphQL API
VITE_GRAPHQL_API_URL=https://your-api-url/graphql
